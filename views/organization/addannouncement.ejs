<body>
<%- include('../includes/navigation.ejs') %>
    <div class="container">
        <h1 class="text-center">
            Announce Something
        </h1>
        <div class="row justify-content-md-center">
            <div class="col col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <form method="POST" action= "/organization/dashboard/addannouncement" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="AnnounceTitle" class="form-label">Announcement Title</label>
                                <input type="text" class="form-control" id="AnnounceTitle" name="title" required/>
                            </div>
                            <div class="mb-3">
                                <label for="AnnounceImage" class="form-label">Featured Image</label>
                                <input type="file" class="form-control" id="AnnounceImage" name="featured_url" accept="image/*" required/>
                            </div>
                            <div class="mb-3">
                                <label for="AnnounceContent" class="form-label">Announcement Content</label>
                                <textarea class="form-control" id="AnnounceContent" name="content" rows="10" required> Default content </textarea>
                            </div>
                            <button type="submit" class="btn btn-primary"> Announce </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
   </div>
